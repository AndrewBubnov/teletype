generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum MessageType {
  COMMON
  EMOJI
}

model Chat {
  id          String    @id @default(uuid()) @map("_id")
  chatId      String    @unique
  memberIds   String[]
}

model User {
  id       String   @id @default(uuid()) @map("_id")
  userId   String   @unique
  email    String   @unique
  username String
  chatIds  String[]
  imageUrl String?
}
